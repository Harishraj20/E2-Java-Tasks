<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN" 
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="com.example.BeanClass.Customer" table="Customer">
        <id name="id" column="id" type="int">
            <generator class="native" />
        </id>
        <property name="name" column="customer_name" type="string" />
        <property name="age" column="customer_age" type="int" />
        <property name="mobileNumber" column="mobile_number" type="long" />
        <property name="emailId" column="email_id" type="string" />
        <property name="location" column="location" type="string" />
        <property name="Gender" column="gender" type="string" />
    </class>
</hibernate-mapping>
